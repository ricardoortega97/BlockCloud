{
"compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",                  
    "lib": ["ES2022"],                   
    "module": "commonjs",                
    "esModuleInterop": true,            
    "moduleResolution": "node",          
    "resolveJsonModule": true,           
    "types": ["node"],                   

    /* Output */
    "rootDir": "src",                    
    "outDir": "dist",                   
    "declaration": true,                

    /* Strictness */
    "strict": true,                      
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                 
},
"include": ["src"],
"exclude": ["node_modules"]
}